<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

	<Frame name="ZygorGuidesViewer_MoneyFrame" parent="UIParent" movable="true" clampedToScreen="true">
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Size>
			<AbsDimension x="200" y="35"/>
		</Size>
		
		<Frames> <!-- CloseButton -->
			<Button name="$parent_CloseButton" inherits="UIPanelCloseButton" parentKey="CloseButton">
				<Size>
					<AbsDimension x="15" y="15"/>
				</Size>
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset x="-5" y="-3"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick function="MoneyFrame_CloseFrame" />
				</Scripts>
				<NormalTexture    parentKey="ntx" file=""                />
				<PushedTexture    parentKey="ptx" file=""                />
				<HighlightTexture parentKey="htx" file="" alphaMode="ADD"/>		
				<Scripts>
					<OnEnter>
						UIFrameFadeIn(ZygorGuidesViewer_MoneyFrame_CloseButton,0.1,ZygorGuidesViewer_MoneyFrame_CloseButton:GetAlpha(), 1)
					</OnEnter>
				</Scripts>
			</Button>
		</Frames>
	
		<Layers>
			<Layer level="ARTWORK"> <!-- Gold-->
				<FontString name="$parent_GoldAmount" inherits="SystemFont_Small" text="0" justifyV="BOTTOM" justifyH="RIGHT">
					<Size>
						<AbsDimension x="0" y="10"/>
					</Size>
					<Anchors>
						<Anchor point="BOTTOMLEFT">
							<Offset>
								<AbsDimension x="65" y="5"/>
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="0" a="1"/>
				</FontString>
				<Texture name="$parent_GoldIcon" file="Interface\MoneyFrame\UI-GoldIcon">
					<Size>
						<AbsDimension x="10" y="10" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parent_GoldAmount" relativePoint="TOPRIGHT">
							<Offset>
								<AbsDimension x="2" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>

			<Layer level="ARTWORK"> <!-- Silver-->
				<FontString name="$parent_SilverAmount" inherits="SystemFont_Small" text="0" justifyV="BOTTOM" justifyH="RIGHT">
					<Size>
						<AbsDimension x="0" y="10"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parent_GoldIcon" relativePoint="TOPRIGHT">
							<Offset>
								<AbsDimension x="2" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="0" a="1"/>
				</FontString>
				<Texture name="$parent_SilverIcon" file="Interface\MoneyFrame\UI-SilverIcon">
					<Size>
						<AbsDimension x="10" y="10" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parent_SilverAmount" relativePoint="TOPRIGHT">
							<Offset>
								<AbsDimension x="2" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>

			<Layer level="ARTWORK"><!-- Copper-->
				<FontString name="$parent_CopperAmount" inherits="SystemFont_Small" text="0" justifyV="BOTTOM" justifyH="RIGHT">
					<Size>
						<AbsDimension x="0" y="10"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parent_SilverIcon" relativePoint="TOPRIGHT">
							<Offset>
								<AbsDimension x="2" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="0" a="1"/>
				</FontString>
				<Texture name="$parent_GoldIcon" file="Interface\MoneyFrame\UI-CopperIcon">
					<Size>
						<AbsDimension x="10" y="10" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parent_CopperAmount" relativePoint="TOPRIGHT">
							<Offset>
								<AbsDimension x="2" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
			
			<Layer level="ARTWORK"><!-- Main Text -->
				<FontString name="$parent_MainText" inherits="SystemFont_Med1" text="Total value of grey items" justifyV="BOTTOM" justifyH="RIGHT">
					<Size>
						<AbsDimension x="0" y="23"/>
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="7"/>
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" a="1"/>
				</FontString>
			</Layer>

		</Layers>
		
		<Scripts>
			<OnEnter>
				UIFrameFadeIn(ZygorGuidesViewer_MoneyFrame_CloseButton,0.1,ZygorGuidesViewer_MoneyFrame_CloseButton:GetAlpha(), 1)
			</OnEnter>
			<OnLeave>
				UIFrameFadeOut(ZygorGuidesViewer_MoneyFrame_CloseButton,0.1,ZygorGuidesViewer_MoneyFrame_CloseButton:GetAlpha(), 0)
			</OnLeave>
			<OnLoad>
				UIFrameFadeOut(ZygorGuidesViewer_MoneyFrame_CloseButton,0.1,ZygorGuidesViewer_MoneyFrame_CloseButton:GetAlpha(), 0)
				self:RegisterForDrag("LeftButton")
			</OnLoad>
			<OnDragStart>
				self:StartMoving()
			</OnDragStart>
			<OnDragStop>
				self:StopMovingOrSizing()
			</OnDragStop>
		</Scripts>

	</Frame>
</Ui>

